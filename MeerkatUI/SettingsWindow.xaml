<Window x:Class="MeerkatUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeerkatUI"
        mc:Ignorable="d"
        Title="Настройки редактора" Height="250" Width="400" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Text="Размер шрифта редактора" HorizontalAlignment="Center" FontSize="12" />
		<TextBox Grid.Row="0" Grid.Column="1" Width="100" TextAlignment="Center" HorizontalAlignment="Center" FontSize="12">
			<TextBox.Text>
				<Binding Path="EditorFontSize">
					<Binding.ValidationRules>
						<ExceptionValidationRule />
					</Binding.ValidationRules>
				</Binding>
			</TextBox.Text>
		</TextBox>

		<TextBox Grid.Row="1" Grid.Column="1" Width="100" />
	</Grid>
</Window>
